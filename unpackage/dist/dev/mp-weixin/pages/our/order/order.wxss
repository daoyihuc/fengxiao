.content .list {
  width: 100%;
  height: 500rpx;
  -webkit-border-radius: 10rpx 10rpx 0  0;
          border-radius: 10rpx 10rpx 0  0;
  background-color: #FFFFFF;
}
.content .bar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  text-align: center;
  font-size: 15px;
  border-bottom: 8px solid #f9f9f9;
  padding-bottom: 30rpx;
}
.content .bar image {
  width: 100rpx;
  height: 100rpx;
}
.content .bar .row {
  width: 50rpx;
  height: 1px;
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  background-color: #fa5f3e;
}
.content .bar .name {
  padding-top: 10rpx;
  color: #fa5f3e;
}
.content .bar .active {
  -webkit-filter: grayscale(1);
          filter: grayscale(1);
  color: #c2c2c2;
}
.content .li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f8f8f8;
  font-size: 14px;
}
.content .li input {
  padding-left: 20rpx;
}
.content .li image {
  width: 25rpx;
  height: 30rpx;
}
.content .li .uni-input {
  width: 500rpx;
  padding-left: 20rpx;
  color: #868686;
}
.content .li textarea {
  width: 95%;
  background: #f9f9f9;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  padding: 20rpx;
}
.content .license {
  background-color: #f7f7f7;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  font-size: 14px;
  color: #6c6c6c;
  text-align: center;
  padding: 20rpx;
  margin: 20rpx;
}
.content .license image {
  padding-top: 20rpx;
  width: 400rpx;
  height: 200rpx;
}
.content button {
  width: 500rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #FFFFFF;
  font-size: 14px;
  border: none;
  background: -webkit-linear-gradient(3deg, #FF4A16, #FFA25D);
  background: linear-gradient(87deg, #FF4A16, #FFA25D);
  -webkit-box-shadow: -1px 2px 5px 0px rgba(250, 95, 62, 0.6);
          box-shadow: -1px 2px 5px 0px rgba(250, 95, 62, 0.6);
  -webkit-border-radius: 38px;
          border-radius: 38px;
  margin: 50rpx auto;
}
.content .wait {
  margin: auto;
  text-align: center;
  color: #bababa;
  text-align: center;
  font-size: 14px;
}

