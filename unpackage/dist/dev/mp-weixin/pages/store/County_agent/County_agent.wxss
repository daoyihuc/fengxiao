.card_top {
  font-size: 16px;
  color: #333333;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-weight: bold;
  padding: 30rpx;
}
.card_top .row {
  height: 20px;
  width: 2px;
  background-color: #FA5F3E;
}
.card_top text {
  padding-left: 20rpx;
}
.card_top .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.card_top .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 14px;
  color: #FA5F3E;
}
.card_top .right image {
  width: 40rpx;
  height: 40rpx;
}
.title_top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  border-top: 1px solid #eee;
  color: #4d4d47;
}
.title_top image {
  width: 300rpx;
  height: 230rpx;
}
.title_top .right {
  padding-left: 10rpx;
}
.title_top .right .img_li {
  font-size: 14px;
  padding-top: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.title_top .right .img_li image {
  width: 30rpx;
  height: 30rpx;
}
.title_top .right .img_li text {
  padding-left: 15rpx;
}
.title_top .right .bot {
  width: 110rpx;
  height: 50rpx;
  font-size: 14px;
  color: #FFFFFF;
  background: -webkit-linear-gradient(18deg, #FF444B, #FD7239);
  background: linear-gradient(72deg, #FF444B, #FD7239);
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin: 20rpx;
}
