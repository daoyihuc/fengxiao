.title_top image {
  width: 300rpx;
  height: 230rpx;
}
.title_top .right {
  padding-left: 10rpx;
}
.title_top .right .img_li {
  font-size: 14px;
  padding-top: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
