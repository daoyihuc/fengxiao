.content .swiper {
  width: 100%;
  margin-top: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.content .swiper-box {
  width: 100%;
  height: 45vw;
  overflow: hidden;
  /* box-shadow: 0upx 8upx 25upx rgba(0, 0, 0, 0.2); */
  position: relative;
  z-index: 1;
}
.content .swiper-box swiper {
  width: 100%;
  height: 50vw;
}
.content .swiper-box swiper swiper-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.content .swiper-box swiper swiper-item image {
  width: 100%;
  height: 49vw;
  margin: 0 auto;
  display: block;
  -webkit-transition: height .3s;
  transition: height .3s;
}
.content .swiper-item-side {
  width: 100%;
  height: 45vw !important;
  -webkit-transition: height .3s;
  transition: height .3s;
}
.content .indicator {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background-color: #7e7e7e;
  width: 150rpx;
  height: 5rpx;
  -webkit-border-radius: 3rpx;
          border-radius: 3rpx;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: 20rpx;
}
.content .dots {
  width: 0rpx;
  background-color: #fe5a41;
  -webkit-transition: all 0.3s ease-out;
  transition: all 0.3s ease-out;
  margin-left: 20rpx;
}
.content .on {
  width: 30%;
  background-color: white;
  -webkit-transition: all 0.3s ease-out;
  transition: all 0.3s ease-out;
}
.content .tab {
  border-bottom: 5px solid #f8f8f8;
}
.content .tab .tab_li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  padding: 20rpx;
